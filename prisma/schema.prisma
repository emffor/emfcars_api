// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transmisson {
  id   String @id @default(uuid())
  name String @unique
  Cars Cars[]

  @@map("transmissions")
}

model Brands {
  id   String @id @default(uuid())
  name String @unique
  Cars Cars[]

  @@map("brands")
}

model Cars {
  id            String       @id @default(uuid())
  color         String
  model         String
  creation_year Int
  model_year    Int
  Transmisson   Transmisson? @relation(fields: [transmissonId], references: [id])
  transmissonId String?
  Brands        Brands?      @relation(fields: [brandsId], references: [id])
  brandsId      String?

  @@map("cars")
}
