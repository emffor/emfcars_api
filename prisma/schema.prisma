// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transmissions {
  id          String @id @default(uuid())
  name        String @unique
  description String
  Cars        Cars[]

  @@map("transmissions")
}

model Brands {
  id          String @id @default(uuid())
  name        String @unique
  description String
  Cars        Cars[]

  @@map("brands")
}

model Cars {
  id              String         @id @default(uuid())
  color           String
  model           String
  creation_year   Int
  model_year      Int
  Transmissions   Transmissions? @relation(fields: [transmissionsId], references: [id])
  transmissionsId String?
  Brands          Brands?        @relation(fields: [brandsId], references: [id])
  brandsId        String?

  @@map("cars")
}
